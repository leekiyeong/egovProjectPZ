<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

<div id="modalUpdateLocationData">
    <div id="modalUpdateLocationDataWrapper">
        <h2>위치등록허가창</h2>
        <form>
            <label for="updatePlaceName">장소명</label>
            <input type="text" id="updatePlaceName" name="updatePlaceName" required>
	
            <label for="updateAddress">주소</label>
            <input type="text" id="updateAddress" name="updateAddress" required>
	
            <label for="updatePhoto">사진</label>
            <input type="text" id="updatePhoto" name="updatePhoto" placeholder="이미지 링크">
	
            <label for="updateDescription">부가설명</label>
            <textarea id="updateDescription" name="updateDescription"></textarea>
	
            <label for="updateSource">출처</label>
            <input type="url" id="updateSource" name="updateSource" placeholder="https://">
	
            <div class="buttons">
                <button type="button" id="approveButton">승인하기</button>
                <button type="button" id="rejectButton">거절하기</button>
            </div>
        </form>
    </div>
    <span id="closeModalUpdateLocationData">&times;</span>
</div>